<% content_for :page_title do %>
	<%= I18n.t("spree.editing_collaborator_for_html") %>
<% end %>

<%= form_for([:admin, @collaborator]) do |f| %>
	<div class="alpha eight columns">
		<% unless @collaborator.name.blank? %>
			<h2><%= @collaborator.name %></h2>
		<% end %>
		<p>
			<%= simple_format(@collaborator.email) %>
		</p>
	</div>

	<div class="omega eight columns">
		<%= render 'form', f: f %>
	</div>

	<div class="clear"></div>

	<fieldset class="no-border-top">
		<% if can? :manage, Spree::Collaborator %>
			<%= render 'spree/admin/shared/edit_resource_links' %>
		<% end %>
	</fieldset>
<% end %>
